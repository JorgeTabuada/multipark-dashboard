# MultiPark Dashboard - Environment Variables
# Copy this file to .env and fill with your values

# === SUPABASE CONFIGURATION ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# === DATABASE ===
DATABASE_URL=postgresql://postgres:password@localhost:5432/multipark

# === APPLICATION SETTINGS ===
DEBUG=true
APP_ENV=development
SECRET_KEY=your-secret-key-here
API_V1_STR=/api
PROJECT_NAME=MultiPark Dashboard

# === FRONTEND ===
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# === FILE UPLOAD ===
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=.xlsx,.xls

# === EMAIL (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
MAIL_FROM=noreply@multipark.pt

# === MONITORING (Optional) ===
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=INFO

# === EXTERNAL APIS (Optional) ===
GOOGLE_SHEETS_API_KEY=your-google-sheets-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook

# === DOCKER COMPOSE ===
POSTGRES_DB=multipark
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
PGADMIN_DEFAULT_EMAIL=admin@multipark.pt
PGADMIN_DEFAULT_PASSWORD=admin123
